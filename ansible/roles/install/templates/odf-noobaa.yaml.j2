apiVersion: noobaa.io/v1alpha1
kind: NooBaa
metadata:
  name: noobaa
  namespace: {{ odf_project }}
  labels:
    app: noobaa
spec:
  cleanupPolicy:
    allowNoobaaDeletion: true
  defaultBackingStoreSpec:
    type: pv-pool
    pvPool:
      numVolumes: 1
      resources:
        requests:
          storage: 16Gi
  dbResources: {}
  dbType: postgres
  dbVolumeResources:
    requests:
      storage: 1Gi
  endpoints:
    maxCount: 10
    minCount: 1
    resources:
      limits:
        cpu: 500m
        memory: 512Mi
      requests:
        cpu: 50m
        memory: 256Mi
  region: storage
  security:
    kms: {}